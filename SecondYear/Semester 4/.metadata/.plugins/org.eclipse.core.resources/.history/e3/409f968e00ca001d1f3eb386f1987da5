package March_24;

public class Arrange_WaveForm {
	public static void main(String[] args) {
		int[] arr = {10,5,2,7,3,12,15,6};
		int[] arr2 = waveForm(arr);
		for(int i=0 ; i<arr2.length ; i++) {
			System.out.println(arr2[i]);
		}
	}
	public static int[] waveForm(int[] arr) {
		for(int i=1 , j=0  ; i<arr.length-1 && j<arr.length-2 ; i+=2 , j+=2) {
			if(arr[i]<arr[i+2]) {
				int temp = arr[i];
				arr[i] = arr[i+2];
				arr[i+2] = temp;
			}
			if(arr[j]<arr[j+2]) {
				int temp = arr[j];
				arr[j] = arr[j+2];
				arr[j+2] = temp;
			}
		}
		return arr;
	}
	public static int[] waveForm2(int[] arr) {
		for(int i=0 ; i<arr.length ; i++) {
			if(arr[i]<arr[i+1]) {
				int temp = arr[i];
				arr[i] = arr[i+1];
				arr[i+1] = temp;
			}
		}
		return arr;
	}
}
