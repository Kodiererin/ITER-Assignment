package March_29;

public class recursion_PrintHexadecimal {
	public static void main(String[] args) {
		System.out.println(hexaDecimalConversion(15, ""));
	}
	public static String hexaDecimalConversion(int x,String hexa) {
		if(x==0) return "";
		int rem=x%16;
		switch(rem) {
			case 10 :{ 
				hexa+='A';
				break;
			}
			case 11 : {
				hexa+='B';
				break;
			}
			case 12 : {
				hexa+='C';
				break;
			}
			case 13 :{
				hexa+='D';
				break;
			}
			case 14 : {
				hexa+='E';
				break;
			}
			case 15 : {
				hexa+=15;
				break;
			}
			default : {
				hexa+=rem;
			}
		}
		return hexaDecimalConversion(x/16, hexa);
	}
}
