package April_14;

public class a_Arrange012 {
	public static void main(String[] args) {
		arrange();
	}
//	Arrange 0,1,2
	public static void arrange() {
		int[] arr = {0,2,2,2,2,1,1,1,1,2,2,2,0,1,1,0,0,0};
		int left = 0;
		int right = arr.length-1; 
		int i=0;
		while(left<right) {
			if(arr[left]==0 && arr[right]==2) {
				left++;
				right--;
				i++;
			}
			if(arr[left]!=0 && arr[right]==2) {
				right--;
			}
			if(arr[left]==0 && arr[right]!=2) {
				left++;
			}
			if(arr[left]>arr[right]) {
				int temp = arr[left];
				arr[left] = arr[right];
				arr[right] = temp;
				right--;
				left++;
				i++;
			}
			if(arr[left]>arr[right]) {
				int temp = arr[left];
				arr[left] = arr[right];
				arr[right] = temp;
				right--;
				left++;
				i++;
			}
			System.out.println(arr[left]);
			System.out.println(arr[right]);
			
		}
		for(int j=0 ; j<arr.length ; j++) {
			System.out.print(arr[j]+" ");
		}
	}
}
