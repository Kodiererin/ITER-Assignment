package April_14;

//	Given an array of 
public class b_RangePortion {
	public static void main(String[] args) {
		compute();
	}
//	Given an array of integers and a range.Write a program to partition the array so, that value 
//	smaller than range comes on left and greater than range comes right and value under range comes at middle.

	public static void compute() {
		int[] arr = {0,2,2,1,2,1,2,1,0,2,0,0,0,2};
		int left = 5;
		int right = 8; 
		int i=0;
		while(i<right) {
			if(arr[i]==0) {
				int temp = arr[i];
				arr[i] = arr[left];
				arr[left] = temp;
				left++;
				i++;
			}
			else if(arr[i]==2) {
				int temp = arr[i];
				arr[i] = arr[right];
				arr[right] = temp;
				right--;
			}
			else
			{
				i++;
			}

		}
		for(int j=0 ; j<arr.length ; j++) {
			System.out.print(arr[j]+" ");
		}
	}
}
